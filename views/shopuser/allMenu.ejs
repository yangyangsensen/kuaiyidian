<script>
$(document).ready(function(){  
		 $("#headDown").click(function(){
	       $("#headAdd").slideDown("slow");
	     });
	      $("#closeUp").click(function(){
	       $("#headAdd").slideUp("slow");
	     });
	 });
</script>
<style>
  #headAdd{
  	display: none;
  }
.form-control{
	border-radius: 3px;
	width: 80%;
	height: 40px;
	margin-top: 5px;
	border: 1px solid #DDDDDD;
}
.btn{
		width: 80px;
		height: 30px;
		border-radius: 2px;
		color: #FFFFFF;
		cursor: pointer;
		border: 1px solid #13c276;
	    background-color: #13c276;
}
.btntwo{
		width: 80px;
		height: 30px;
		border-radius: 2px;
		color: #FFFFFF;
		cursor: pointer;
		border: 1px solid #DDDDDD;
  	   background-color: #DDDDDD;
	}
.th-style{
		color:#6a6a6a ;
		line-height: 30px;
		height: 30px;
		border-bottom: 2px solid #dadada;
	}
	.td-style{
		color:#6a6a6a ;
		font-size: 13px;
		line-height: 30px;
		height: 30px;
		border-bottom: 1px solid #dadada;
	}
</style>

<div class="head" style="overflow: hidden;width: 100%; height: 100%; ">
	<div class="headAdd" id="headAdd" style=" height: 300px; width: 100%;border: 0px;">
	       <p style="float: left;color: #DADADA;">请认真填写您的菜品</p>
			<form method="post" action="/users/newmenu" enctype="multipart/form-data" name="pushop" >
			<input type="hidden" name="typeid" id="typeid" value="<%-typeid%>" />
		    <input type="text" class="form-control" name="menusname" placeholder="请输入菜名">
			<input type="text" class="form-control" name="currentprice" placeholder="请输入菜品定价">
		    <input type="text" class="form-control" name="costprice" placeholder="请输入菜品折扣价">
		    <textarea class="form-control" rows="5" placeholder="请输入菜品简介" name='menusintro' style="margin-left: 5px;"></textarea>
		    <br/>
		    <label for="lastname" class=" control-label">菜品图片</label>
		    <input type="file" id="menusimg" name='menusimg'>
		    <br/>
		    <input type="submit" class="btn btn-primary"  value='提交'/>
		    <input type="button" class="btntwo closeUp"  id='closeUp'  value='关闭'/>
		    </form>	
	</div>
	<div class="headDown" id="headDown" style=" height: 20px; width: 100%;background: #379aff;color: #FFFFFF;font-size: 15px;text-align: center; border-radius: 2px;cursor: pointer;">
		添加&nbsp;<%- typename%>
	</div>
	<div style=" overflow-y: auto;">
	<table style="width: 100%;">
			<thead >
			<tr align="center" >
				<th class="th-style">菜名</th>
				<th class="th-style">定价</th>
				<th class="th-style">折扣价</th>
				<th class="th-style">操作</th>
			</tr>
			</thead>
			<tbody align="center">
			   <% rs.forEach(function(row){ %>
			  	<tr>
			     <td class="td-style"><%-row.menusname%></td>
			     <td class="td-style"><%-row.currentprice%></td>
		         <td class="td-style"><%-row.costprice%></td>
			     <td class="td-style">删除</td>
			    </tr>
	          <% }) %>
			</tbody>
		</table>
	</div>
</div>