<script>
function onSubPub(){
	if(puuser.nicheng.value==''){
		alert('名称不允许空');
		puuser.nicheng.focus();
		return false;
	}
	if(puuser.email.value==''){
		alert('email不允许空');
		puuser.email.focus();
		return false;
	}
	if(puuser.pwd.value==0){
		alert('密码不能为空');
		puuser.pwd.focus();
		return false;
	}
	if(puuser.role.value==0){
		alert('请选择店员类型');
		puuser.role.focus();
		return false;
	}

	return true;
}
$(document).ready(function(){  
		 $(".button").click(function(){
		 	   puuser.reset();
	       $("#myform").fadeIn(1000);
	     });
	   $(".btntwo").click(function(){
	       $("#myform").fadeOut(1000);
	     });
});
</script>
<div class="form-group" id='myform' align="center" >
	<form method="post" action="/users/waiter"  name="puuser" onsubmit="return onSubPub()">
		<span style="font-size: 20px; color: #DDDDDD;"> 请输入店员信息</span>
      <input type="text" class="form-control" name="nicheng" placeholder="店员名">
      <input type="text" class="form-control" name="email" placeholder="请输入email">
      <input type="password" class="form-control" name="pwd" placeholder="请输入密码">
    <select class="form-control" name='role' >
      <option value='0'>请选择店员类别</option>
      <% rstype.forEach(function(rowtype){ %>
			<option value='<%-rowtype.id%>'><%-rowtype.usertype %></option>
	  <% }) %>
     
    </select>
    <br/>
    <input type="submit" class="btn"  value='提交' />
    <input type="button" class="btntwo"  value='关闭'/>
    </form>
</div>
<div class="rowa" style="width: 100%;">
